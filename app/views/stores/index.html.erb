<%= content_for :content do %>
  <button type="button" class="btn btn-block btn-primary">商铺管理</button>
  <br>
  <div class="text-right">
    <%= link_to '+添加商铺', new_store_path, class: 'btn btn-sm btn-primary' %>
  </div>
  <hr>
  <%= paginate @stores %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>商铺名</th>
        <th>介绍</th>
        <th>老板</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each_with_index do |store, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= store.name %></td>
          <td><%= store.intro %></td>
          <td><%= store.user.email %></td>
          <td>
            <%= link_to '详情', store, class: 'btn btn-sm btn-primary' %>
            <%= link_to '编辑', edit_store_path(store), class: 'btn btn-sm btn-primary' %>
            <%= link_to('删除', store, method: :delete,
                        class: 'btn btn-sm btn-danger',
                        data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @stores %>
<% end %>
