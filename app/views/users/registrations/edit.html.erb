<%= content_for :content do %>
  <%= link_to "返回", :back, class: 'btn btn-sm btn-primary' %>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-6 jumbotron">
        <h3 class="">编辑资料</h3>
        <hr>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group row field">
            <%= f.label :email, '邮箱：', class: 'col-3 col-form-label' %>
            <div class="col-9">
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group row field">
            <%= f.label :password, '密码：', class: 'col-3 col-form-label' %>
            <div class="col-9">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            <i>如果不修改密码，留空</i>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            </div>
          </div>

          <div class="form-group row field">
            <%= f.label :password_confirmation, '确认密码：', class: 'col-3 col-form-label' %>
            <div class="col-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row field">
            <%= f.label :current_password, '当前密码：', class: 'col-3 col-form-label' %> 
            <div class="col-9">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            <i>(输入当前密码确认修改)</i>
            </div>
          </div>

          <div class="text-right actions">
            <%= f.submit "更新", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <hr>
        <h3>删除停用账户</h3>
        <p><%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: {confirm: "Are you sure?"}, method: :delete %></p>
      </div>
    </div>
  </div>
<% end %>
