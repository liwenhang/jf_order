<%= content_for :content do %>
  <div class="jumbotron">
    <span class="display-4">用户权限设置</span>
  </div>

  <div class="container">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">给 <%= @user.email %> 配置权限：</h4>

        <%= form_for @user do |f| %>

          <%= f.collection_select :role_ids, Role.all, :id, :name, { include_blank: true }, { class: 'form-control' } %>

          <div class="text-right">
            <%= f.submit 'Submit', class: 'btn btn-secondary ', data: {confirm: '确认修改权限？'} %>
          </div>
        <% end %>

      </div>
    </div>
  </div>

<% end %>
