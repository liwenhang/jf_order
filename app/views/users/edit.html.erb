<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    用户管理
    <small>Optional description</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= users_path %>"><i class="fa fa-dashboard"></i>用户列表</a></li>
    <li class="active">权限管理</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">

  <div class="jumbotron">
    <%= form_for @user do |f| %>

        <div class="form-group field">
          <%= f.collection_check_boxes(:role_ids, Role.all, :id, :name, include_hidden: true) do |b| %>
              <%= b.label class:"form-check-label" do %>
                  <%= b.check_box + b.text %>
              <% end %>
          <% end %>
        </div>

        <div class="text-right">
          <%= f.submit 'Submit', class: 'btn btn-sm btn-primary ', data: { confirm: '确认修改权限？' } %>
        </div>

    <% end %>
  </div>

</section>
<!-- /.content -->

