<%= content_for :content do %>

  <%= render 'shared/title', title: '用户管理' %>

  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-4">
        <%= paginate @users %>
      </div>
      <div class="col-4"></div>
      <div class="col-4">
        <div class="input-group">
          <%= f.search_field :email_cont, class: 'form-control', placeholder: '邮箱' %>
          <span class="input-group-btn">
          <%= f.submit '搜索', class: 'btn btn-outline-dark' %>
        </span>
        </div>
      </div>
    </div>
  <% end %>

  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>账号</th>
      <th>创建日期</th>
      <th>修改日期</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.updated_at.to_date %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to "详情", user, class: 'btn btn-sm btn-outline-dark' %>
            <%= link_to "权限", edit_user_path(user), class: 'btn btn-sm btn-outline-dark mx-1' %>
            <% if can? :destroy, user %>
              <%= link_to "删除", user, method: :delete, data: {confirm: "确认删除"}, class: 'btn btn-sm btn-outline-danger' %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

<% end %>
