<style>
  .card:hover {
    box-shadow: 0px 0px 3px 5px rgba(220, 221, 221, 0.377);
  }
</style>

<div class="card" style="width: 18rem;">

  <div id="menu-<%= menu.id %>-carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% menu.pictures.count.times do |index| %>
        <li data-target="#menu-<%= menu.id %>-carousel" data-slide-to="<%= index %>"
                                                        class="<%= 'active' if index == 0 %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% menu.pictures.each_with_index do |picture, i| %>
        <div class="carousel-item <%= 'active' if i == 0 %>">
          <%= image_tag picture.url, class: 'd-block w-100 card-img-top' %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#menu-<%= menu.id %>-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#menu-<%= menu.id %>-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



  <div class="card-body">
    <h4 class="card-title"><%= truncate menu.name, length: 17 %></h4>
    <p class="card-text">price: ¥<%= menu.price / 100.to_f %></p>

    <div class="btn-group btn-group-sm">
      <%= link_to '详情', menu, class: 'btn btn-sm btn-outline-dark' %>
      <%= link_to '编辑', edit_menu_path(menu), class: 'btn btn-sm btn-outline-dark mx-1' %>
      <%= link_to('删除', menu, method: :delete,
                  class: 'btn btn-sm btn-outline-danger',
                  data: {confirm: '确认删除？'}) %>
    </div>
  </div>
</div>
