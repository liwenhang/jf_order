<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    菜品管理 <small><%= @menus.count %> </small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
    <li class="active">Here</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">

  <%= search_form_for @q, html: { class: "navbar-form" } do |f| %>
    <div class="form-group">
      <%= f.search_field :name_cont, class: 'form-control', placeholder: '菜名' %>
    </div>
    <%= f.submit '搜索', class: 'btn btn-primary' %>
  <% end %>

  <div class="text-right">
    <%= link_to '+添加菜品', new_menu_path, class: 'btn btn-sm btn-primary' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>菜名</th>
        <th>介绍</th>
        <th>价格（元）</th>
        <th>商铺</th>
        <th colspan="3">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each_with_index do |menu, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= menu.name %></td>
          <td><%= truncate menu.intro %></td>
          <td><%= menu.price / 100.0 %></td>
          <td><%= menu.store.store_and_user %></td>
          <td><%= link_to '详情', menu, class: 'btn btn-sm btn-primary' %>
          <%= link_to '编辑', edit_menu_path(menu), class: 'btn btn-sm btn-primary' %>
          <%= link_to('删除', menu, method: :delete,
                      class: 'btn btn-sm btn-danger',
                      data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @menus %>

</section>
