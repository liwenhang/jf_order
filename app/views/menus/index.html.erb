<%= content_for :content do %>
  <button type="button" class="btn btn-block btn-primary">菜单管理</button>
  <br>
  <div class="text-right">
    <%= link_to '+添加菜品', new_menu_path, class: 'btn btn-sm btn-primary' %>
  </div>
  <hr>
  <%= paginate @menus %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>菜名</th>
        <th>介绍</th>
        <th>价格（元）</th>
        <th>商铺</th>
        <th colspan="3">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each_with_index do |menu, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= menu.name %></td>
          <td><%= menu.intro %></td>
          <td><%= menu.price %></td>
          <td><%= menu.store.store_and_user %></td>
          <td><%= link_to '详情', menu, class: 'btn btn-sm btn-primary' %>
          <%= link_to '编辑', edit_menu_path(menu), class: 'btn btn-sm btn-primary' %>
          <%= link_to('删除', menu, method: :delete,
                      class: 'btn btn-sm btn-danger',
                      data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
