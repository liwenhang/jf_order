<%= render 'wechat/addresses/nav' %>

<div class="container">

  <%= form_for [:wechat, @address] do |f| %>
    <div class="form-group row">
      <%= f.label :name, '姓名', class: 'col-3 col-form-label' %>
      <div class="col-9">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :phone_number, '手机号', class: 'col-3 col-form-label' %>
      <div class="col-9">
        <%= f.phone_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :info, '地址', class: 'col-3 col-form-label' %>
      <div class="col-9">
        <%= f.text_field :info, class: 'form-control' %>
      </div>
    </div>

    <div class="text-right">
      <%= f.submit '确认', class: 'btn btn-sm btn-outline-info' %>
    </div>
  <% end %>
</div>
